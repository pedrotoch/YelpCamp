<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to CampGrounds</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new Campground</a>
                <a href="/seed" class="btn btn-primary btn-xs">Seed</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <div class="caption">
                        <h4><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></h4>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>" ></a>
                    <div class="caption"><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Read More</a></div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>